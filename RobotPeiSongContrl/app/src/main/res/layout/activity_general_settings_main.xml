<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/light_gray">

    <!-- 左侧菜单栏 -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="通用设置"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/mint_green"/>

        <Button
            android:id="@+id/btn_volume_settings"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="音量设置"
            android:textAllCaps="false"
            android:background="@menu/menu_item_background"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btn_personalization_settings"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="个性化设置"
            android:textAllCaps="false"
            android:background="@menu/menu_item_background"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btn_admin_password_settings"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="管理员密码设置"
            android:textAllCaps="false"
            android:background="@menu/menu_item_background"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btn_delivery_settings"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="配送设置"
            android:textAllCaps="false"
            android:background="@menu/menu_item_background"
            android:textColor="@color/black"/>
    </LinearLayout>

    <!-- 右侧内容区 -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>