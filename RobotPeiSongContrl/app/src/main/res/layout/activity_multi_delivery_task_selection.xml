<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/light_gray"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="多任务配送选择"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- 右上角倒计时 -->
        <TextView
            android:id="@+id/tv_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150s"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 区域A: 任务按钮 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/task_buttons_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:spacing="10dp" />

            <!-- 移除关闭所有仓门按钮 -->

            <Button
                android:id="@+id/btn_start_multi_delivery"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/button_sky_blue_rect"
                android:text="@string/multi_delivery_start"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- 区域B: 输入点位区域 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_switch_input_mode"
                android:layout_width="256dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:background="@drawable/button_sky_blue_rect"
                android:text="切换为：数字键入模式"
                android:textColor="@color/white" />

            <!-- 下拉列表模式容器（默认显示） -->
            <LinearLayout
                android:id="@+id/ll_dropdown_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点位列表"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_task_poi"
                    android:layout_width="256dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/button_sky_blue_rect"
                    android:paddingHorizontal="10dp" />
            </LinearLayout>

            <!-- 数字键入模式容器（默认隐藏，包裹原有显示框和数字键盘） -->
            <LinearLayout
                android:id="@+id/ll_keyboard_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_display"
                    android:layout_width="256dp"
                    android:layout_height="60dp"
                    android:background="@color/white"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="5"> <!-- 新增一行放完成并关闭仓门按钮 -->

                    <!-- 数字按钮1-9, 清除, 0, 退格（原完成按钮） -->
                    <Button
                        android:id="@+id/btn_1"
                        android:backgroundTint="@color/mint_green"
                        android:text="1" />

                    <Button
                        android:id="@+id/btn_2"
                        android:backgroundTint="@color/mint_green"
                        android:text="2" />

                    <Button
                        android:id="@+id/btn_3"
                        android:backgroundTint="@color/mint_green"
                        android:text="3" />

                    <Button
                        android:id="@+id/btn_4"
                        android:backgroundTint="@color/mint_green"
                        android:text="4" />

                    <Button
                        android:id="@+id/btn_5"
                        android:backgroundTint="@color/mint_green"
                        android:text="5" />

                    <Button
                        android:id="@+id/btn_6"
                        android:backgroundTint="@color/mint_green"
                        android:text="6" />

                    <Button
                        android:id="@+id/btn_7"
                        android:backgroundTint="@color/mint_green"
                        android:text="7" />

                    <Button
                        android:id="@+id/btn_8"
                        android:backgroundTint="@color/mint_green"
                        android:text="8" />

                    <Button
                        android:id="@+id/btn_9"
                        android:backgroundTint="@color/mint_green"
                        android:text="9" />

                    <Button
                        android:id="@+id/btn_clear"
                        android:backgroundTint="@color/mint_green"
                        android:text="清除" />

                    <Button
                        android:id="@+id/btn_0"
                        android:backgroundTint="@color/mint_green"
                        android:text="0" />

                    <!-- 退格 -->
                    <Button
                        android:id="@+id/btn_done"
                        android:backgroundTint="@color/mint_green"
                        android:text="退格" />

                </GridLayout>
            </LinearLayout>
            <!-- 完成并关闭仓门按钮（跨3列） -->
            <Button
                android:id="@+id/btn_complete_close_door"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="3"
                android:background="@drawable/button_sky_blue_rect"
                android:text="完成并关闭仓门"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="398dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="已选任务"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- 任务详情容器 -->
                <ScrollView
                    android:layout_width="396dp"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/task_details_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:spacing="8dp" />
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>