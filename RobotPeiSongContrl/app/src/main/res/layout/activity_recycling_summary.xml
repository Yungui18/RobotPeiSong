<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <!-- 1. 回收任务信息文本框（滚动展示，不可编辑） -->
    <TextView
        android:id="@+id/tv_recycle_records"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape_edittext_border"
        android:padding="15dp"
        android:gravity="top|left"
        android:scrollbars="vertical"
        android:textColor="@android:color/black"
        android:text="暂无执行过的回收任务"
        android:layout_marginBottom="20dp"/>

    <!-- 2. 功能按钮组（一键开门/一键关门） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <Button
            android:id="@+id/btn_open_executed_doors"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="一键开门"
            android:background="@drawable/button_sky_blue_rect"
            android:textColor="@android:color/white"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/btn_close_all_doors"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="一键关门"
            android:background="@drawable/button_sky_blue_rect"
            android:textColor="@android:color/white"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <!-- 3. 回桩按钮（独立展示，突出重要性） -->
    <Button
        android:id="@+id/btn_return_to_charging"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="回桩"
        android:background="@drawable/button_sea_blue_rect"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>

</LinearLayout>