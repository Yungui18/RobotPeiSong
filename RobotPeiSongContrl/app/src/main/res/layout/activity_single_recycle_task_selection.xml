<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- 统一顶部布局 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/light_gray"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="单任务回收选择"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60s"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- 原有功能区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- 区域A: 任务按钮 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/task_buttons_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:spacing="10dp" />

            <Button
                android:id="@+id/btn_start"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/button_sky_blue_rect"
                android:text="开始回收"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- 区域B: 数字键盘 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这里设置回收点位："
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_recycle_point"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/button_sky_blue_rect"
                    android:paddingHorizontal="10dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_switch_input_mode"
                android:layout_width="256dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:background="@drawable/button_sky_blue_rect"
                android:text="切换为：数字键入模式"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/ll_dropdown_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点位列表"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_task_poi"
                    android:layout_width="256dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/button_sky_blue_rect"
                    android:paddingHorizontal="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_keyboard_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_display"
                    android:layout_width="256dp"
                    android:layout_height="60dp"
                    android:background="@color/white"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnCount="3"
                    android:rowCount="5">

                    <Button
                        android:id="@+id/btn_1"
                        android:backgroundTint="@color/mint_green"
                        android:text="1" />

                    <Button
                        android:id="@+id/btn_2"
                        android:backgroundTint="@color/mint_green"
                        android:text="2" />

                    <Button
                        android:id="@+id/btn_3"
                        android:backgroundTint="@color/mint_green"
                        android:text="3" />

                    <Button
                        android:id="@+id/btn_4"
                        android:backgroundTint="@color/mint_green"
                        android:text="4" />

                    <Button
                        android:id="@+id/btn_5"
                        android:backgroundTint="@color/mint_green"
                        android:text="5" />

                    <Button
                        android:id="@+id/btn_6"
                        android:backgroundTint="@color/mint_green"
                        android:text="6" />

                    <Button
                        android:id="@+id/btn_7"
                        android:backgroundTint="@color/mint_green"
                        android:text="7" />

                    <Button
                        android:id="@+id/btn_8"
                        android:backgroundTint="@color/mint_green"
                        android:text="8" />

                    <Button
                        android:id="@+id/btn_9"
                        android:backgroundTint="@color/mint_green"
                        android:text="9" />

                    <Button
                        android:id="@+id/btn_clear"
                        android:backgroundTint="@color/mint_green"
                        android:text="清除" />

                    <Button
                        android:id="@+id/btn_0"
                        android:backgroundTint="@color/mint_green"
                        android:text="0" />

                    <Button
                        android:id="@+id/btn_done"
                        android:backgroundTint="@color/mint_green"
                        android:text="退格" />

                </GridLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_complete_close_door"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="3"
                android:background="@drawable/button_sky_blue_rect"
                android:text="准备就绪，点击出发"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>