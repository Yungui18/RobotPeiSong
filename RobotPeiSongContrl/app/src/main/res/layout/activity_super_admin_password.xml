<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:background="?selectableItemBackgroundBorderless"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="超级管理员密码设置"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btn_change_super_admin_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="修改超级管理员密码"
        android:textAllCaps="false"
        android:background="@drawable/button_blue_rect"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btn_reset_admin_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="重置普通管理员密码"
        android:textAllCaps="false"
        android:background="@drawable/button_red_rect"/>
</LinearLayout>