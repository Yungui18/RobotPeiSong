<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="操作设置"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- 仓门1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="仓门1"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <View
                android:id="@+id/door1_indicator"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/door_indicator_closed"/>

            <Button
                android:id="@+id/btn_door1_open"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="打开"
                android:background="@drawable/button_blue_rect"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_door1_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关闭"
                android:background="@drawable/button_red_rect"
                android:textColor="@color/white"/>
        </LinearLayout>

        <!-- 仓门2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="仓门2"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <View
                android:id="@+id/door2_indicator"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/door_indicator_closed"/>

            <Button
                android:id="@+id/btn_door2_open"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="打开"
                android:background="@drawable/button_blue_rect"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_door2_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关闭"
                android:background="@drawable/button_red_rect"
                android:textColor="@color/white"/>
        </LinearLayout>

        <!-- 仓门3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="仓门3"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <View
                android:id="@+id/door3_indicator"
