<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="操作设置"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- 仓门1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="仓门1"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <View
                android:id="@+id/door1_indicator"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/door_indicator_closed"/>

            <Button
                android:id="@+id/btn_door1_open"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="打开"
                android:background="@drawable/button_blue_rect"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_door1_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关闭"
                android:background="@drawable/button_red_rect"
                android:textColor="@color/white"/>
        </LinearLayout>

        <!-- 仓门2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="仓门2"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <View
                android:id="@+id/door2_indicator"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/door_indicator_closed"/>

            <Button
                android:id="@+id/btn_door2_open"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="打开"
                android:background="@drawable/button_blue_rect"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_door2_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关闭"
                android:background="@drawable/button_red_rect"
                android:textColor="@color/white"/>
        </LinearLayout>

        <!-- 仓门3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="仓门3"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <View
                android:id="@+id/door3_indicator"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/door_indicator_closed"/>

            <Button
                android:id="@+id/btn_door3_open"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="打开"
                android:background="@drawable/button_blue_rect"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_door3_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关闭"
                android:background="@drawable/button_red_rect"
                android:textColor="@color/white"/>
        </LinearLayout>

        <!-- 仓门4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="仓门4"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <View
                android:id="@+id/door4_indicator"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/door_indicator_closed"/>

            <Button
                android:id="@+id/btn_door4_open"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="打开"
                android:background="@drawable/button_blue_rect"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_door4_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关闭"
                android:background="@drawable/button_red_rect"
                android:textColor="@color/white"/>
        </LinearLayout>

        <!-- 状态提示 -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="仓门状态: 全部关闭"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="16dp"/>

        <!-- 配送验证设置 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <!-- 启用配送验证开关 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="启用配送验证"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

                <Switch
                    android:id="@+id/switch_verification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- 密码设置区域，默认隐藏 -->
            <LinearLayout
                android:id="@+id/layout_password_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingStart="16dp"
                android:paddingTop="16dp">

                <!-- 取物密码 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="取物密码"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/et_pickup_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberPassword"
                    android:maxLength="4"
                    android:hint="请输入4位取物密码"
                    android:background="@drawable/edittext_border"/>

                <!-- 送物密码 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="送物密码"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"/>

                <EditText
                    android:id="@+id/et_delivery_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberPassword"
                    android:maxLength="4"
                    android:hint="请输入4位送物密码"
                    android:background="@drawable/edittext_border"/>
            </LinearLayout>
        </LinearLayout>
        <!-- 模拟操作提示 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="当前处于模拟操作模式"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:layout_marginTop="24dp"/>
    </LinearLayout>

</ScrollView>