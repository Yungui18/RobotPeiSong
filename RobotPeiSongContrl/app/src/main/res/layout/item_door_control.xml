<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="24dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_door_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textColor="@color/black"/>

    <View
        android:id="@+id/door_indicator"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/door_indicator_closed"/>

    <Button
        android:id="@+id/btn_door_open"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="打开"
        android:background="@drawable/button_blue_rect"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btn_door_close"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="关闭"
        android:background="@drawable/button_red_rect"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btn_door_pause"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="暂停"
        android:background="@drawable/button_orange_rect"
        android:textColor="@color/black"
        android:layout_marginStart="8dp"/>
</LinearLayout>